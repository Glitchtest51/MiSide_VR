{
   "name": "MiSide Default Bindings",
   "controller_type": "oculus_touch",
   "bindings": {
     "/actions/MiSide": {
       "sources": [
         {
           "mode": "trigger",
           "path": "/user/hand/left/input/trigger",
           "inputs": {
             "click": {
               "output": "/actions/MiSide/in/Grab_Left"
             }
           }
         },
         {
           "mode": "trigger",
           "path": "/user/hand/right/input/trigger",
           "inputs": {
             "click": {
               "output": "/actions/MiSide/in/InteractUI"
             }
           }
         },
         {
           "mode": "joystick",
           "path": "/user/hand/left/input/thumbstick",
           "inputs": {
             "position": {
               "output": "/actions/MiSide/in/WSAD_Move"
             }
           }
         },
         {
           "mode": "joystick",
           "path": "/user/hand/right/input/thumbstick",
           "inputs": {
             "position": {
               "output": "/actions/MiSide/in/MouseMove_Rotate"
             }
           }
         },
         {
           "mode": "button",
           "path": "/user/hand/left/input/x",
           "inputs": {
             "click": {
               "output": "/actions/MiSide/in/SnapTurnLeft"
             }
           }
         },
         {
           "mode": "button",
           "path": "/user/hand/left/input/y",
           "inputs": {
             "click": {
               "output": "/actions/MiSide/in/SnapTurnRight"
             }
           }
         }
       ],
       "poses": [
         {
           "output": "/actions/MiSide/in/Pose",
           "path": "/user/hand/left/pose/raw"
         },
         {
           "output": "/actions/MiSide/in/Pose",
           "path": "/user/hand/right/pose/raw"
         }
       ],
       "skeleton": [
         {
           "output": "/actions/MiSide/in/SkeletonLeftHand",
           "path": "/user/hand/left/input/skeleton/left"
         },
         {
           "output": "/actions/MiSide/in/SkeletonRightHand",
           "path": "/user/hand/right/input/skeleton/right"
         }
       ],
       "haptics": [
         {
           "output": "/actions/MiSide/out/HapticLeft",
           "path": "/user/hand/left/output/haptic"
         },
         {
           "output": "/actions/MiSide/out/HapticRight",
           "path": "/user/hand/right/output/haptic"
         }
       ]
     }
   }
 }